{{#partial "header"}}
    <!DOCTYPE html>
    <html>
    <head>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <!-- Bootstrap CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">

        <!--css-->
        <link href="css/style.css" rel="stylesheet" type="text/css">

        <title>{{#block "title"}}Admin | Add Location{{/block}}</title>
    </head>
    <header>
        <nav class="navbar navbar-dark bg-dark">
            <div class="container-fluid">
                <span class="navbar-brand mb-0 h1"><a class="navbar-brand" href="/">Go Drive</a></span>
            </div>
        </nav>
    </header>
{{/partial}}

{{#partial "content"}}
    <div>
        <form action="/admin/location/add" method="post">
            <h3>Add location/route</h3>
            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="location" name="location" placeholder="Nairobi-Mombasa">
                <label for="location">Location</label>
            </div>
            <div class="form-floating">
                <input type="number" class="form-control" id="price" name="price" placeholder="1000">
                <label for="price">Price</label>
            </div>
            <br>
            <button type="submit" class="btn btn-success">Add Location</button>
        </form>
    </div>
{{/partial}}

{{> layout.hbs}}